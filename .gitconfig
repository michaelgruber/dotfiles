[user]
	name = Michael Gruber
	email = mail@michaelgruber.me
[core]
	editor = "subl -n -w"
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[merge]
	tool = vimdiff
[alias]
	unstage = reset HEAD --
	last = log -1 HEAD
	bundler = !sh ~/.local/bin/git_bundler.sh
[cor]
	autocrlf = false
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = simple
